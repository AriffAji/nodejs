<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2 class="mb-3">Form Ubah data contact</h2>
      <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(er => { %>
          <li><%= er.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <form method="post" action="/contact?_method=PUT">
        <input type="hidden" name="_id" value="<%= contact._id %>" />
        <input type="hidden" name="oldNama" value="<%= (contact.oldNama) ? contact.oldNama :contact.nama %>" />
        <div class="form-group">
          <label for="nama">Nama</label>
          <input type="text" class="form-control" id="nama" name="nama" required value="<%= contact.nama %>" />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" class="form-control" id="email" name="email" required value="<%= contact.email %>" />
        </div>
        <div class="form-group">
          <label for="nohp">NO HP</label>
          <input type="number" class="form-control" id="nohp" name="nohp" required value="<%= contact.nohp %>" />
        </div>

        <button type="submit" class="btn btn-primary">Tambah Data Contact</button>
      </form>
    </div>
  </div>
</div>
